<settings> 
  <data_type>csv</data_type> 
  <type>{lineType}</type>
  <font>Tahoma</font>   
  <text_size>11</text_size>
  <depth>15</depth>
  <angle>30</angle>
  <decimals_separator>.</decimals_separator>
  
  <background>  
    <alpha>100</alpha>
    <border_alpha>15</border_alpha>
  </background>
  
  <column>
    <width>85</width>     
    <spacing>0</spacing> 
    <grow_time>3</grow_time>
    <grow_effect>elastic</grow_effect>    
    <balloon_text>                                                    
      <![CDATA[{title}: {value}%]]>
    </balloon_text>    
     <data_labels>
      <![CDATA[{value}%]]>
    </data_labels>
 </column>

  <plot_area>
    <margins>
      <left>{lineTypeLeft}</left>
      <right>{lineTypeRight}</right>
      <top>80</top>
    </margins>
  </plot_area>
  
  <grid>                 
    <category>                                                                
      <alpha>10</alpha>  
      <dashed>true</dashed>
    </category>
    <value>                      
      <alpha>10</alpha>    
      <dashed>true</dashed>
    </value>
  </grid>
  
  <values>                 
    <category>             
      <color>999999</color>
    </category>
    <value>                    
      <min>0</min>             
    </value>
  </values>
  
  <axes>                       
    <category>                 
      <color>E7E7E7</color>    
      <width>1</width>         
    </category>
    <value>                    
      <color>#E7E7E7</color>       
      <width>1</width>         
    </value>
  </axes>  
  
  <balloon>                    
    <text_color>000000</text_color>
    <corner_radius>4</corner_radius>
    <border_width>3</border_width>
    <border_alpha>50</border_alpha>
    <border_color>#000000</border_color>
    <alpha>80</alpha>
  </balloon>
    
  <labels>                         
    <label>
      <x>0</x>
      <y>27</y>
      <text_color>000000</text_color>
      <text_size>14</text_size>
      <align>center</align>
      <text>
        <![CDATA[<b>{questionName}</b>]]>
      </text>        
    </label>
  </labels>
  
  <legend>
    <enabled></enabled>
    <align></align>
    <border_alpha>100</border_alpha>
    <border_color>E7E7E7</border_color>
    <margins>5</margins>
  </legend>
  
  <graphs><!-- BEGIN LABEL -->
    <graph>                          
      <type></type>                                                      
      <title><![CDATA[{labelName}]]></title>             
      <color>{color}</color>                  
    </graph><!-- END LABEL -->
 </graphs>
 
  <export_as_image>
    <file>../Chart/ChartExport.php</file> 
    <target>_top</target>
    <x></x>
    <y></y>
    <color></color>
    <alpha>100</alpha>
    <text_color></text_color>
    <text_size></text_size>
  </export_as_image>
 
  <context_menu> 
    <default_items>
	   <zoom>false</zoom>
	   <print>false</print>
    </default_items>
  </context_menu>  

  <strings>
    <no_data></no_data>
    <export_as_image>以图片格式导出</export_as_image>
    <collecting_data>收集数据过程中...</collecting_data>
  </strings>
  
</settings>
